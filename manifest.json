{
    "manifest_version": 2,

    "name": "WORLD WIDE CATS",
    "description": "Cats everywhere!!",
    "version": "0.5",

    "author": "Daphn√© Popin <daphne.popin+cbrw@gmail.com>",
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "Word Wide Cats"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["js/script.js"],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "scripts": ["js/background.js"]
    },
    "permissions": [
        "tabs", "http://*/*", "https://*/*"
    ]
}
